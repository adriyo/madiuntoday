<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="@drawable/selector_category_row"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="@dimen/cardview_content_padding">

    <ImageView
        android:id="@+id/category_decrease_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="@dimen/cardview_content_padding"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_remove_circle_red_900_24dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/category_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/category_decrease_iv"
        android:layout_toLeftOf="@+id/category_setting_iv"
        android:layout_toRightOf="@+id/category_decrease_iv"
        android:layout_toStartOf="@+id/category_setting_iv"
        android:text="Pendidikan" />

    <ImageView
        android:id="@+id/category_setting_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="@dimen/cardview_content_padding"
        app:srcCompat="@drawable/ic_menu_black_24dp" />

</RelativeLayout>