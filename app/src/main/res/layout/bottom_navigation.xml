<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:background="@color/white_blue"
                                             android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:background="@drawable/shadow_above"
            android:layout_height="?actionBarSize">

        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="fill_parent"
                      android:layout_height="fill_parent" android:weightSum="5.0">
            <FrameLayout android:id="@+id/f_btn_news" 
                         android:clickable="true" android:layout_width="@dimen/nol_dp"
                         android:layout_height="fill_parent" android:layout_weight="1.0">
                <ImageView android:layout_gravity="center" android:id="@+id/btn_feeds"
                           android:layout_width="@dimen/width_24dp" android:layout_height="@dimen/height_24dp"
                           android:src="@mipmap/ic_newss_on" android:scaleType="centerInside"/>
            </FrameLayout>
            <FrameLayout android:id="@+id/f_btn_explorer" 
                         android:clickable="true" android:layout_width="@dimen/nol_dp"
                         android:layout_height="fill_parent" android:layout_weight="1.0">
                <ImageView android:layout_gravity="center" android:id="@+id/btn_explorer"
                           android:layout_width="@dimen/width_24dp" android:layout_height="@dimen/height_24dp"
                           android:src="@mipmap/ic_tv_off" android:scaleType="centerInside"/>
            </FrameLayout>

            <FrameLayout android:id="@+id/f_btn_gallery" 
                         android:clickable="true" android:layout_width="@dimen/nol_dp"
                         android:layout_height="fill_parent" android:layout_weight="1.0">
                <ImageView android:layout_gravity="center" android:id="@+id/btn_gallery" android:background="@null"
                           android:layout_width="@dimen/width_24dp" android:layout_height="@dimen/height_24dp"
                           android:src="@mipmap/ic_gallery_off" android:scaleType="centerInside"/>
            </FrameLayout>

            <FrameLayout android:id="@+id/f_btn_continue_watching" 
                         android:clickable="true" android:layout_width="@dimen/nol_dp"
                         android:layout_height="fill_parent" android:layout_weight="1.0">
                <ImageView android:layout_gravity="center" android:id="@+id/btn_continue_watching"
                           android:background="@null" android:layout_width="@dimen/width_24dp"
                           android:layout_height="@dimen/height_24dp" android:src="@mipmap/ic_coin_off"
                           android:scaleType="centerInside"/>
            </FrameLayout>

            <FrameLayout android:id="@+id/f_btn_search" 
                         android:clickable="true" android:layout_width="@dimen/nol_dp"
                         android:layout_height="fill_parent" android:layout_weight="1.0">
                <ImageView android:layout_gravity="center" android:id="@+id/btn_search" android:background="@null"
                           android:layout_width="@dimen/width_24dp" android:layout_height="@dimen/height_24dp"
                           android:src="@mipmap/ic_mtd_off" android:scaleType="centerInside"/>
            </FrameLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>